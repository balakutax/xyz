@model RJ.Tokoku.DataLayer.InventoryManagement.Warehouse

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@if (ViewBag.IsDelete == true)
{
    <div>Are you sure want to delete this data?</div>
}

<div>
    <h4>Warehouse</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.city)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.city)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>
    </dl>
</div>

@if (ViewBag.IsDelete == true)
{
    <div>
        @using (Html.BeginForm("Delete", "Warehouse"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.code)
            <input type="submit" value="Delete" class="btn btn-default" />
        }
    </div>
}

<p>
    @Html.ActionLink("Edit", "Edit", new { warehouseCode = Model.code }) |
    @Html.ActionLink("Back to List", "Index")
</p>
